@model Meal

<div class="card shadow-lg rounded-lg" id="@Model.Day.DayOfWeek-@Model.MealType">
    <img src="https://spoonacular.com/recipeImages/@Model.Recipe.Image" alt="Image of recipe" id="img-@Model.Recipe.Id" class="card-image" />
    <div class="card-body">
        <h4 class="card-title" id="title-@Model.Recipe.Id">
            @Model.Recipe.Title
        </h4>
        @if (Model.Recipe.Dislike)
        {
            <div class="card-img-overlay">
                <div class="card-img-overlay">
                    <h3 class="text-md-right p-1 text-warning bg-dark d-inline shadow-lg">
                        <i class="fa fa-flag-usa"></i> Possible disliked ingredient
                    </h3>
                </div>
            </div>
        }
        <div class="button-group w-100">
            <button class="btn btn-outline-danger " id="btn-@Model.Recipe.Id" type="button" title="Swap out for a favorited recipe" onclick="getFavorites('@Model.Recipe.Id')">
                <i class="fas fa-heart"></i> Swap
            </button>
            <button class="btn btn-outline-secondary " type="button" onclick="getMealDetails('@Model.Recipe.Id')">
                <i class="fa fa-info">  </i>
            </button>
            <button class="btn btn-outline-primary" type="button" onclick="regenerate('@Model.Day.ToString()', '@Model.Day.DayOfWeek-@Model.MealType')">
                @*https://iconmonstr.com/refresh-4-svg/ From here*@
                <svg width="24" height="24" viewBox="0 0 24 24"><path d="M13.5 2c-5.288 0-9.649 3.914-10.377 9h-3.123l4 5.917 4-5.917h-2.847c.711-3.972 4.174-7 8.347-7 4.687 0 8.5 3.813 8.5 8.5s-3.813 8.5-8.5 8.5c-3.015 0-5.662-1.583-7.171-3.957l-1.2 1.775c1.916 2.536 4.948 4.182 8.371 4.182 5.797 0 10.5-4.702 10.5-10.5s-4.703-10.5-10.5-10.5z" /></svg>
            </button>
        </div>
        <button class="btn btn-outline-success " type="button" onclick="favorite('@Model.Recipe.Id')">
            <i class="fa fa-heart">  </i> Save it
        </button>
        <button class="btn btn-outline-warning " type="button" onclick="shelf('@Model.Recipe.Id')">
            <i class="fa fa-heart-broken">  </i> Shelf it
        </button>
    </div>
</div>