@model MealFridge.Models.ViewModels.Meals
@{
    ViewBag.Title = "Meal Plan";
}
<div class="container">
    <div id="modal-container"></div>

    <button class="w-100 btn btn-outline-dark rounded-pill shadow-lg" onclick="getMealPlan()">Generate meal plan</button>
    <div class="meal-plan-main"></div>

    <div class="m-lg-3" id="meals">
        @if (Model != null)
        {
            <partial name="MealPlan" model="@Model" />
        }
    </div>
</div>
<div class="container">
    <button onclick="genSLfromMP()" id="genSLButton" class="w-100 btn btn-outline-dark rounded-pill shadow-lg" style="display:none">Add Recipes to Shopping List</button>
</div>
<div class="fixed-bottom d-flex justify-content-center w-50 " id="alert"></div>
@section Scripts {
    <script src="~/js/MealPlan/Index.js"></script>
}