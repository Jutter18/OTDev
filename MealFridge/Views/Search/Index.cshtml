


<div class="container">
    <h3 class="text-center">Search by Recipe Name or Ingredient!</h3>
    <div class="jumbotron p-0 h-25 sticky-top shadow-lg">

        <div class="collapse" id="shoppingList" style="background-color:whitesmoke">
            <h3>Shopping List</h3>
            <table class="table table-responsive-sm">
            </table>
        </div>
        <div class="input-group">
            <div class="input-group-prepend">
                <button class="float-left btn btn-outline-success sticky-top" type="button" data-toggle="collapse" data-target="#shoppingList" aria-expanded="false" aria-controls="shoppingList">
                    <i class="fa fa-shopping-cart"></i>
                </button>
                <select id="searchType" class=" w-auto custom-select bg-primary text-light">
                    <option value="Recipe">Recipe Name</option>
                    <option value="Ingredient">Ingredient</option>
                </select>
            </div>
            <input id="sbn" type="text" class="w-auto form-control" placeholder="Recipe name or ingredient" aria-label="Search for recipes by name">
            <div class="input-group-append">
                <button class="btn btn-success" onclick="searchByName()" type="button">
                    <i class="fa fa-search" aria-hidden="true"></i>
                </button>
            </div>
        </div>
    </div>
    <div id="spinner"></div>
    <div id="main" class="card-columns"></div>
</div>

@section Scripts {
    <script src="~/js/Search/Index.js"></script>
    <script src="~/js/Search/RecipeDetails.js"></script>
}