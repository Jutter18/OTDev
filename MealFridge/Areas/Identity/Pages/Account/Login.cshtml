@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="row pt-3">
    <div class="col-lg-8 bg-primary p-md-2 justify-content-center">
        <div class="card shadow-lg p-lg-3 rounded-lg text-center">
            <section>
                <form id="account" method="post">
                    <h4 class="card-title text-center pt-2 ">@ViewData["Title"]</h4>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control text-center" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control text-center" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                        <div class="text-left checkbox">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-outline-primary rounded-pill w-100">Log in</button>
                    </div>
                    <div class="form-group text-left ">
                        <a class="btn btn-outline-secondary" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                        <a class="btn btn-outline-success" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </div>
                </form>
            </section>
        </div>
    </div>
    <div class="col-md-3 bg-success">
        <div class="card shadow-lg rounded-lg">
            <div class="card-body">
                <img class="card-img-top" src="~/img/OTDLogo.png" />
            </div>
            <div class="card-footer">
                <i>Powered by On Track Development</i>
            </div>
        </div>
    </div>
