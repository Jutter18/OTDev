{
  "compileOnSave": true,
  "compilerOptions": {
    "lib": [ "es2015.promise", "ES2015", "es6", "es2016", "es5", "dom" ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "noImplicitAny": false,
    "outDir": "wwwroot/js",
    "removeComments": true,
    "rootDir": "Scripts/",
    "sourceMap": true,
    "target": "ESNext"
  },
  "include": [
    "Scripts/"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}