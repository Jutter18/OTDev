@model IEnumerable<string>;
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    <div class="col">
        <div class="card shadow-lg" style="padding: 2% 5% 2% 5%">
            <div class="text-center">
                <img class="card-img-top active" src="~/images/Everest.jpg" alt="Mount Everst as seen from Drukair2" width="1024" />
            </div>
            <div class="card-footer">
                <p>Data and idea for this app: Binit Shrestha, WOU Senior project class 2020. Photo above <a href="https://en.wikipedia.org/wiki/Mount_Everest#/media/File:Mount_Everest_as_seen_from_Drukair2_PLW_edit.jpg">from Wikipedia</a>.  Data from <a href="https://github.com/rfordatascience/tidytuesday/blob/master/data/2020/2020-09-22/readme.md">R for Data Science TidyTuesday: Himalayan Climbing Expeditions</a></p>
            </div>
        </div>
    </div>
    <div class="col shadow-lg testimonial-group" id="scroll">
        <div class="card shadow-lg">
            <h2 class="text-center">Climbing in the Himalayas</h2>
            <h5 class="card-title"><strong>Current Articles</strong></h5>
        </div>
        <table class="table-striped table-responsive">
            @foreach (var exp in Model)
            {
                <tr>
                    <td>
                        <div class="card col-sm">
                            <p class="card-text">@exp</p>
                        </div>
                    </td>
                </tr>
            }
        </table>

    </div>
</div>
